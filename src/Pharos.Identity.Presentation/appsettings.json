{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgresSQL": "Host=localhost;Port=5432;Username=postgres;Password=postgres;Database=identity"
  },
  "IdentitySettings": {
    "AdminUserEmail": "admin@gmail.com",
    "AdminUserPassword": "admin@gmail.com",
    "ClientAppUrl": "http://localhost:3000"
  },
  "OAuthSettings": {
    "Clients":  [
      {
        "ClientId": "talapker-nextjs",
        "ClientSecret": "talapker-nextjs-secret",
        "ClientName": "TalapkerNextjsClient",
        "DisplayName": "Talapker Nextjs client",
        "RedirectUris": [ "http://localhost:3000/api/auth/callback/pharosIdentityServer" ],
        "PostLogoutRedirectUris": [ "http://localhost:3000/" ],
        "Permissions": [
          "ept:authorization",
          "ept:token",
          "ept:end_session",
          "gt:authorization_code",
          "gt:refresh_token",
          "ft:pkce",
          "rst:code",
          "id_token",
          "token"
        ],
        "AllowedScopes": [ "openid", "profile", "email", "IdentityServer.fullaccess", "Media.fullaccess" ],
        "RequirePkce": true
      }
    ],
    "Scopes": [
      {
        "DisplayName": "Identity provider full access",
        "Name": "IdentityServer.fullaccess",
        "Resources": [ "IdentityServer" ]
      },
      {
        "DisplayName": "Media service full access",
        "Name": "Media.fullaccess",
        "Resources": [ "Media" ]
      },
      {
        "DisplayName": "OpenID",
        "Name": "openid"
      }
    ],
    "Issuer": "http://localhost:5000"
  }
}