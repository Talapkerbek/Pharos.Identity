@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="relative flex min-h-screen flex-col items-center justify-center w-full overflow-hidden">
    <a class="absolute left-3 top-3 flex items-center gap-2" href="/">
        <img src="/imgs/logo.svg" alt="Logo" class="h-9 w-9">
        <p class="text-4xl font-bold">Pharos</p>
    </a>

    <div class="bg-card text-card-foreground flex flex-col gap-6 rounded-xl border py-6 px-7 w-[400px] lg:w-[500px]" style="box-shadow: 0 4px 6px rgba(0, 0, 0.5, 0.4);">
        <div class="flex flex-col gap-1 mb-4">
            <p class="text-muted-foreground">Welcome back!</p>
            <h1 class="text-5xl font-semibold">Sign in</h1>
        </div>

        <form id="account" method="post" class="flex flex-col gap-6 w-full max-w-md">
            <div asp-validation-summary="ModelOnly" class="text-destructive text-sm"></div>

            <!-- Email / Username -->
            <div class="relative">
                <input asp-for="Input.Email"
                       class="peer w-full rounded-md border border-border bg-card px-3 pt-5 pb-2 text-card-foreground placeholder-transparent focus:ring-2 focus:ring-primary focus:outline-none"
                       placeholder="Email or Username" autocomplete="username" />
                <label asp-for="Input.Email"
                       class="absolute left-3 top-2 text-muted-foreground text-sm transition-all peer-placeholder-shown:top-5 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-sm peer-focus:text-primary">
                    Username or Email
                </label>
                <span asp-validation-for="Input.Email" class="text-destructive text-sm"></span>
            </div>

            <!-- Password -->
            <div class="relative">
                <input asp-for="Input.Password"
                       id="passwordInput"
                       type="password"
                       class="peer w-full rounded-md border border-border bg-card px-3 pt-5 pb-2 text-card-foreground placeholder-transparent focus:ring-2 focus:ring-primary focus:outline-none"
                       placeholder="Password" autocomplete="current-password" />
                <label asp-for="Input.Password"
                       class="absolute left-3 top-2 text-muted-foreground text-sm transition-all peer-placeholder-shown:top-5 peer-placeholder-shown:text-base peer-focus:top-2 peer-focus:text-sm peer-focus:text-primary">
                    Password
                </label>
                <span asp-validation-for="Input.Password" class="text-destructive text-sm"></span>

                <!-- Eye toggle -->
                <button type="button" onclick="togglePassword()"
                        class="absolute right-3 top-1/2 -translate-y-1/2 text-muted-foreground hover:text-foreground">
                    👁
                </button>
            </div>

            <!-- Forgot password -->
            <p class="text-muted-foreground text-xs text-right">
                <a asp-page="./ForgotPassword" class="hover:text-foreground">Forgot password?</a>
            </p>

            <!-- Sign in button -->
            <button type="submit"
                    class="w-full py-3 bg-primary text-primary-foreground font-semibold rounded-md shadow-sm hover:bg-primary/90 hover:-translate-y-0.5 transition-all duration-200">
                Sign in
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            const input = document.getElementById('passwordInput');
            input.type = input.type === 'password' ? 'text' : 'password';
        }
    </script>
}
