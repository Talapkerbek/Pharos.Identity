@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}


<div class="d-flex flex-column h-100 w-100 align-items-center justify-content-center position-relative main-wrapper">
    <p class="position-absolute" style="color: #C6553B; top: 20px; left: 20px; font-size: 20px; font-weight: 900;">Pharos</p>
    
    <div class="bg-white d-flex flex-column rounded-5 login-container"
         style="padding: 50px 40px; box-shadow: 0px 4px 35px rgba(0, 0, 0, 0.08); width: 540px;">

        <div class="d-flex justify-content-between">
            <div class="d-flex gap-0 flex-column mb-4">
                <p style="color: black; font-size: 20px; font-weight: 400; word-wrap: break-word">Welcome to Pharos</p>
                <h1 style="color: black; font-size: 55px; font-weight: 500; word-wrap: break-word">Sign in</h1>
            </div>
        </div>

        <section class="">
            <form id="account" method="post">
                <p style="color: black; font-size: 16px; font-weight: 400; word-wrap: break-word; margin-bottom: 14px;">Enter your username or email address</p>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-4">
                    <input asp-for="Input.Email" class="form-control text-white" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <label asp-for="Input.Email" class="form-label bg-transparent">Username or Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <p style="color: black; font-size: 16px; font-weight: 400; word-wrap: break-word; margin-bottom: 14px;">Enter your password</p>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control text-white" autocomplete="current-password" aria-required="true" placeholder="password"/>
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <p class="" style="text-align: right; color: #AD3113; font-size: 13px;  font-weight: 400; word-wrap: break-word; margin-bottom: 32px">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="">Forgot password</a>
                </p>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg text-white" style="width: 451px; height: 54px; background: #E48700; box-shadow: 0px 4px 19px rgba(119, 147, 65, 0.30); border-radius: 10px">
                        <p style="width: 56px; color: white; font-size: 16px; font-weight: 500; word-wrap: break-word" class="mx-auto">
                        Sign in
                        <p/>
                    </button>
                </div>

                <div class="mt-2">
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <div class="position-absolute bg-left h-100 w-50 d-flex align-items-center justify-content-center" style="left: 0; z-index: -50">
        <img src="~/imgs/leftboy.png">
    </div>
    <div class="position-absolute bg-right h-100 w-50 d-flex align-items-center justify-content-center" style="right: 0; z-index: -50">
        <img src="~/imgs/rightboy.png">
    </div>
</div>


