@page
@using Microsoft.Extensions.Localization
@using Pharos.Identity.Infra
@model ForgotPasswordModel
@inject IStringLocalizer<SharedResource> Localizer;

@{
    ViewData["Title"] = Localizer["ForgotPassword"];
}

<div class="container my-5">
    <div class="row align-items-start">
        <!-- Форма -->
        <div class="col-12 col-lg-5 mb-4 mb-lg-0">
            <h1>@ViewData["Title"]</h1>
            <h2>@Localizer["EnterEmail"]</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["ResetPassword"]</button>
            </form>
        </div>

        <!-- Картинка -->
        <div class="col-12 col-lg-6 d-flex justify-content-center">
            <img src="~/imgs/ForgotPassword.jpg" 
                 alt="Forgot password" 
                 class="img-fluid" 
                 style="max-height: 350px; object-fit: contain;">
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
